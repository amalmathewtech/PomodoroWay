#:import utils kivy.utils

<FirstScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#35477d")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows: 1
            pos_hint: {"top": 0.55, "left": 1}
            size_hint: 1, 0.15
            ImageButton:
                source:"icons/start.png"
                on_release:
                    app.change_screen('second_screen')
        Label:
            pos_hint: {"top": 0.45, "left": 1}
            size_hint: 1, 0.1
            text: "START"
            bold: True
            size: self.size
            pos: self.pos

            

            
