#:import utils kivy.utils

<ThirdScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#35477d")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#35477d")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            id: timer2
            font_size: 70
            text: " 5:00"
            size_hint: 1, .1
            pos_hint: {"top": 0.55, "left": 1}

        Label:
            id: message1_id_label
            multiline:True
            text: "Congrats Your Pomodoro is over"
            size_hint: 1, .1
            pos_hint: {"top": 0.40, "left": 1}
            size:self.size
        Label:
            id: message2_id_label
            multiline:True
            text: "It's time for a short break"
            size_hint: 1, .1
            pos_hint: {"top": 0.35, "left": 1}
            size:self.size
